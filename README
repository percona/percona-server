1. LD_PRELOAD=libHotBackup.so ./mysqld

2. install plugin tokubackup soname 'tokubackup.so';

3. show variables like 'tokubackup%';

4. set tokubackup_dir="/tmp/backup1047";

5. select @@tokubackup_last_error;

