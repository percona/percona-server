--source include/have_component_audit_log.inc
--source ../inc/audit_tables_init.inc
--source ../inc/audit_comp_install.inc

SET @start_value = @@global.audit_log_filter.format_unix_timestamp;

SELECT @@global.audit_log_filter.format_unix_timestamp;
--error ER_INCORRECT_GLOBAL_LOCAL_VAR
SELECT @@session.audit_log_filter.format_unix_timestamp;

SET GLOBAL audit_log_filter.format_unix_timestamp=ON;
SELECT @@global.audit_log_filter.format_unix_timestamp;
SET GLOBAL audit_log_filter.format_unix_timestamp=OFF;
SELECT @@global.audit_log_filter.format_unix_timestamp;

SET GLOBAL audit_log_filter.format_unix_timestamp=1;
SELECT @@global.audit_log_filter.format_unix_timestamp;
SET GLOBAL audit_log_filter.format_unix_timestamp=0;
SELECT @@global.audit_log_filter.format_unix_timestamp;

--error ER_WRONG_VALUE_FOR_VAR
SET GLOBAL audit_log_filter.format_unix_timestamp=-1;
--error ER_WRONG_TYPE_FOR_VAR
SET GLOBAL audit_log_filter.format_unix_timestamp=0.5;
--error ER_WRONG_VALUE_FOR_VAR
SET GLOBAL audit_log_filter.format_unix_timestamp="";
--error ER_WRONG_VALUE_FOR_VAR
SET GLOBAL audit_log_filter.format_unix_timestamp="str";

# Check permissions
CREATE USER 'user1'@'%' IDENTIFIED BY '111';

connect(conn1, localhost, user1, 111, test);

--connection conn1
SELECT @@global.audit_log_filter.format_unix_timestamp;
--error ER_SPECIFIC_ACCESS_DENIED_ERROR
SET GLOBAL audit_log_filter.format_unix_timestamp=ON;
SELECT @@global.audit_log_filter.format_unix_timestamp;

--connection default
GRANT AUDIT_ADMIN ON *.* to 'user1'@'%';
--connection conn1
--error ER_SPECIFIC_ACCESS_DENIED_ERROR
SET GLOBAL audit_log_filter.format_unix_timestamp=ON;
SELECT @@global.audit_log_filter.format_unix_timestamp;

--connection default
GRANT SYSTEM_VARIABLES_ADMIN ON *.* to 'user1'@'%';
--connection conn1
SET GLOBAL audit_log_filter.format_unix_timestamp=ON;
SELECT @@global.audit_log_filter.format_unix_timestamp;

--disconnect conn1
--connection default

--echo #
--echo # Cleanup
DROP USER user1;

SET GLOBAL audit_log_filter.format_unix_timestamp = @start_value;

--source ../inc/audit_comp_uninstall.inc
--source ../inc/audit_tables_cleanup.inc
