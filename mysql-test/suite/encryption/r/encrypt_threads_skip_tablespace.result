CREATE TABLE t5 (a varchar(255)) TABLESPACE ts_encrypted ENCRYPTION="Y";
CREATE TABLESPACE ts_not_encrypted ADD DATAFILE 'ts_not_encrypted.ibd' ENCRYPTION="N";
