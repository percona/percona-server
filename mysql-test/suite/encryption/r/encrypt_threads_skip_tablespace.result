insert t4 values (repeat('verysecret', 12));
insert t5 values (repeat('moresecret', 12));
insert t6 values (repeat('sooosecret', 12));
insert t7 values (repeat('notsosecret', 12));
insert t8 values (repeat('uuuuusecret', 12));
