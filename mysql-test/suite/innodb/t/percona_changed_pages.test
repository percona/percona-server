eval SET @r1_r4_pages= (SELECT COUNT(*) FROM INFORMATION_SCHEMA.INNODB_CHANGED_PAGES
  WHERE START_LSN >= $r1_start AND END_LSN <= $r4_end);

eval SET @r1_r3_pages= (SELECT COUNT(*) FROM INFORMATION_SCHEMA.INNODB_CHANGED_PAGES
