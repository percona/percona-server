let $MYSQLD_DATADIR= `select @@datadir`;
--replace_regex /_[[:digit:]]+\.xdb$//
list_files $MYSQLD_DATADIR ib_modified_log_4_*;

remove_files_wildcard $MYSQLD_DATADIR ib_modified_log_4_*.xdb;

--replace_regex /_[[:digit:]]+\.xdb$//
list_files $MYSQLD_DATADIR ib_modified_log_4_*;

