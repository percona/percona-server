#              implicitly named FK constraints
#############################################################################

CREATE TABLE `t1` (
  `id` int NOT NULL DEFAULT '0',
  `a` int DEFAULT NULL,
  `b` int DEFAULT NULL,
  PRIMARY KEY (`id`),
  FOREIGN KEY (`a`) REFERENCES `t1` (`id`),
  FOREIGN KEY (`b`) REFERENCES `t1` (`id`)
