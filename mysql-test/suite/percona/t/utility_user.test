--error ER_TABLEACCESS_DENIED_ERROR
SELECT * FROM mysqltest.t1;

# NOT allowed because --utility-user-privileges does not have ALTER
--error ER_TABLEACCESS_DENIED_ERROR
ALTER TABLE mysqltest.t1 DROP COLUMN b;

