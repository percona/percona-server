# Allowed because --utility-user-privileges has CREATE
CREATE DATABASE mysqltest;

# Allowed because --utility-user-privileges has CREATE
CREATE TABLE mysqltest.t1 (a INT, b INT);

# Allowed because --utility-user-privileges has SHOW DATABASES
