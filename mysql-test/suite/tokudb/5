source include/have_tokudb.inc;
SET DEFAULT_STORAGE_ENGINE='tokudb';

--disable_warnings
drop table if exists t1;
--enable_warnings


## create table.
CREATE TABLE `t1` (`id` int(11) NOT NULL, PRIMARY KEY (`id`));
INSERT INTO t1 VALUES (1),(2),(3);
SELECT * FROM t1;

## add column.
SET TIMESTAMP= UNIX_TIMESTAMP('2017-12-12 12:12:12');
ALTER TABLE t1 ADD COLUMN gmt_time DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP;
--replace_regex /2017-[0-9][0-9]-[0-9][0-9] [0-9][0-9]:[0-9][0-9]:[0-9][0-9]/2017-00-00 00:00:00/
SELECT * FROM t1;

## drop column.
ALTER TABLE t1 DROP COLUMN gmt_time;
SET tokudb_disable_hot_alter=ON;
SET TIMESTAMP= UNIX_TIMESTAMP('2017-12-12 12:12:12');
ALTER TABLE t1 ADD COLUMN gmt_time DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP;
--replace_regex /2017-[0-9][0-9]-[0-9][0-9] [0-9][0-9]:[0-9][0-9]:[0-9][0-9]/2017-00-00 00:00:00/
SELECT * FROM t1;

DROP TABLE t1;

