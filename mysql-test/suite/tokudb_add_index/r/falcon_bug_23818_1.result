CREATE PROCEDURE p1 ()
BEGIN
declare v int default 0;
while v < 100 do
SET @x = concat('update t1 set a = ', v,', b = repeat(0x', hex(rand()*10000),',rand()*549), c = repeat(0x', hex(rand()*255), ',rand()*9999)');
