#
# test updates on single dictionary
# Two cases: pk changes, pk does not change
#
create table foo (a int, b int, primary key (a)) engine=tokudb;
insert into foo values (1,10),(2,20),(3,30);
select * from foo order by a;
a	b
1	10
2	20
3	30
update foo set b=b*10;
select * from foo order by a;
a	b
1	100
2	200
3	300
update foo set a=a+10;
select * from foo order by a;
a	b
11	100
12	200
13	300
drop table foo;
#
# test pk uniqueness check during updates
# Two cases: have one dict, have more than one dict
#
create table foo (a int, b int, c int, primary key (a)) engine=tokudb;
insert into foo values (1,10,100),(2,20,200),(3,30,300);
update foo set a=3 where a=1;
ERROR 23000: Duplicate entry '3' for key 'foo.PRIMARY'
select * from foo order by a;
a	b	c
1	10	100
2	20	200
3	30	300
alter table foo add clustering key (c);
update foo set a=3 where a=1;
ERROR 23000: Duplicate entry '3' for key 'foo.PRIMARY'
drop table foo;
#
# test secondary key uniqueness
#
create table foo (a int, b int, c int, primary key (a), unique key (b)) engine=tokudb;
insert into foo values (1,10,100),(2,20,200),(3,30,300);
update foo set b=20 where b=10;
ERROR 23000: Duplicate entry '20' for key 'foo.b'
update foo set c=c*100;
select * from foo order by a;
a	b	c
1	10	10000
2	20	20000
3	30	30000
DROP TABLE foo;
