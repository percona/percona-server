+inline bool query_without_comments_is_white_space(char c)
+{
+  return ((' ' == c) || ('\t' == c) || ('\r' == c) || ('\n' ==c ));
+}
+bool remove_comments_from_query(Query_Without_Comments * query_without_comments,
+                                const char* query,
+                                size_t query_length,
+                                size_t db_length)
+{
+  if (!query_without_comments->allocate(query_length, db_length))
+    return false;
+  char* buffer= query_without_comments->query();
+
+  size_t query_position = 0;
+  size_t position = 0;
+  // Skip whitespaces from begin
+  while((query_position < query_length) && query_without_comments_is_white_space(query[query_position]))
+  {
+    ++query_position;
+  }
+  long int last_space = -1;
+  while(query_position < query_length)
+  {
+    char current = query[query_position];
+    bool insert_space = false; // insert space to buffer, (IMPORTANT) don't update query_position
+    switch(current)
+    {
+    case '\'':
+    case '"':
+      {
+        buffer[position++] = query[query_position++]; // copy current symbol
+        while(query_position < query_length)
+        {
+          /* found pair quotes, avoid \' and \" */
+          if(current == query[query_position] &&
+             '\\' != query[query_position - 1])
+          {
+            break;
+          }
+          buffer[position++] = query[query_position++]; // copy current symbol
+        }
+        break;
+      }
+    case '/':
+      {
+        /*
+          check for slash-star, avoid slash-star-exclamation and
+          backslash-slash-star.
+        */
+        if(((query_position + 2) < query_length) &&
+           '*' == query[query_position+1] &&
+           '!' != query[query_position+2] &&
+           (0 == query_position ||
+            '\\' != query[query_position-1]))
+        {
+          query_position += 2; // skip "/*"
+          do
+          {
+            /* check for star-slash, avoid backslash-star-slash */
+            if('*' == query[query_position] &&
+               '/' == query[query_position+1] &&
+               '\\' != query[query_position-1])
+            {
+              query_position += 2;
+              insert_space = true;
+              break;
+            }
+            else
+            {
+              ++query_position;
+            }
+          }
+          while(query_position < query_length);
+          if(!insert_space)
+          {
+            continue;
+          }
+        }
+        break;
+      }
+    case '-':
+      {
+        if(query[query_position+1] == '-')
+        {
+          ++query_position; // skip "-", and go to search of "\n"
+        }
+        else
+        {
+          break;
+        }
+      }
+    case '#':
+      {
+        do
+        {
+          ++query_position; // skip current symbol (# or -)
+          /* check for \n, avoid \\n */
+          if('\n' == query[query_position] &&
+             '\\' != query[query_position-1])
+          {
+            ++query_position; // skip '\n'
+            insert_space = true;
+            break;
+          }
+        }
+        while(query_position < query_length);
+        if(insert_space)
+        {
+          break;
+        }
+        else
+        {
+          continue;
+        }
+      }
+    default:
+      if(query_without_comments_is_white_space(current))
+      {
+        insert_space = true;
+        ++query_position;
+      }
+      break; // make gcc happy
+    }
+    if(insert_space)
+    {
+      if((last_space + 1) != position)
+      {
+        last_space = position;
+        buffer[position++] = ' ';
+      }
+    }
+    else
+    {
+      buffer[position++] = query[query_position++];
+    }
+  }
+  while((0 < position) &&
+        query_without_comments_is_white_space(buffer[position - 1]))
+  {
+    --position;
+  }
+  query_without_comments->set_length(position);
+  return true;
+}
+size_t prefix_length_striped(const char* query, size_t query_length)
+{
+  /* Skip all comments and non-letter symbols */
+  size_t query_position = 0;
+  while(query_position < query_length)
+  {
+    bool check = false;
+    char current = query[query_position];
+    switch(current)
+    {
+    case '/':
+      if(((query_position + 2) < query_length) && ('*' == query[query_position+1]) && ('!' != query[query_position+2]))
+      {
+        query_position += 2; // skip "/*"
+        do
+        {
+          if('*' == query[query_position] && '/' == query[query_position+1]) // check for "*/" (without space)
+          {
+            query_position += 2; // skip "*/" (without space)
+            break;
+          }
+          else
+          {
+            ++query_position;
+          }
+        }
+        while(query_position < query_length);
+        continue; // analyze current symbol
+      }
+      break;
+    case '-':
+      if(query[query_position+1] == '-')
+      {
+        ++query_position; // skip "-"
+      }
+      else
+      {
+        break;
+      }
+    case '#':
+      do
+      {
+        ++query_position; // skip current symbol
+        if('\n' == query[query_position])  // check for '\n'
+        {
+          ++query_position; // skip '\n'
+          break;
+        }
+      }
+      while(query_position < query_length);
+      continue; // analyze current symbol
+    case '\r':
+    case '\n':
+    case '\t':
+    case ' ':
+    case '(':
+    case ')':
+      break;
+    default:
+      check = true;
+      break; // make gcc happy
+    } // switch(current)
+    if(check)
+    {
+      if(query_position + 2 < query_length)
+      {
+        // cacheable
+        break;
+      }
+      else
+      {
+        return 0;
+      }
+    } // if(check)
+    ++query_position;
+  } // while(query_position < query_length)
+  return query_position;
+}
+size_t prefix_length_default(const char* query, size_t /* query_length */)
+{
+  size_t query_position= 0;
+  /*
+    Skip '(' characters in queries like following:
+    (select a from t1) union (select a from t1);
+  */
+  while (query[query_position]=='(')
+    query_position++;
+  return query_position;
+}
+class Comments_Processor
+{
+private:
+  Comments_Processor(const Comments_Processor&);
+  Comments_Processor& operator=(const Comments_Processor&);
+public:
+  Comments_Processor(THD *thd) :
+    backup_query          (thd->query()),
+    backup_query_length   (thd->query_length()),
+    db_length             (thd->db_length),
+    query                 (&(thd_query_string(thd)->str)),
+    query_length          (&(thd_query_string(thd)->length)),
+    query_without_comments(&(thd->query_without_comments)),
+    enabled               (opt_query_cache_strip_comments),
+    restore               (false)
+  {
+  }
+  Comments_Processor(Query_Without_Comments  *current_query_without_comments,
+                     char                   **original_query,
+                     size_t                  *original_query_length,
+                     size_t                   current_db_length) :
+    backup_query          (*original_query),
+    backup_query_length   (*original_query_length),
+    db_length             (current_db_length),
+    query                 (original_query),
+    query_length          (original_query_length),
+    query_without_comments(current_query_without_comments),
+    enabled               (opt_query_cache_strip_comments),
+    restore               (false)
+  {
+  }
+  ~Comments_Processor()
+  {
+    restore_comments();
+  }
+  size_t prefix_length()
+  {
+    if (enabled)
+    {
+      return prefix_length_striped(*query, *query_length);
+    }
+    else
+    {
+      return prefix_length_default(*query, *query_length);
+    }
+  }
+  bool remove_comments()
+  {
+    if (!enabled || restore)
+    {
+      return true;
+    }
+    /* Tried to remove comments */
+    if (remove_comments_from_query(query_without_comments,
+                                   *query,
+                                   *query_length,
+                                   db_length))
+    {
+      /* Replace original by striped */
+      *query=        query_without_comments->query();
+      *query_length= query_without_comments->length();
+
+      /* Mark replacement */
+      restore= true;
+    }
+    return restore;
+  }
+  void restore_comments()
+  {
+    if (enabled && restore)
+    {
+      /* Replace striped by original from backup */
+      *query=        backup_query;
+      *query_length= backup_query_length;
+
+      /* Clean query_without_comments */
+      query_without_comments->set_length(0);
+
+      /* Mark restore */
+      restore= false;
+    }
+  }
+private:
+  char         * const backup_query;
+  const size_t         backup_query_length;
+  const size_t         db_length;
+private:
+  char                  **query;
+  size_t                 *query_length;
+  Query_Without_Comments *query_without_comments;
+  bool                    enabled;
+  bool                    restore;
+};
