+  asm volatile (LOCK_prefix "; xadd %0, %1;"                    \
+                : "+r" (v), "=m" (*a)                           \
+                : "m" (*a)                                      \
+                : "memory")
+
+#define make_atomic_cas_body32                                  \
+  __typeof__(*cmp) sav;                                         \
+  asm volatile (LOCK_prefix "; cmpxchg %3, %0; setz %2;"	\
+                : "=m" (*a), "=a" (sav), "=q" (ret)             \
+                : "r" (set), "m" (*a), "a" (*cmp)               \
+                : "memory");                                    \
+  if (!ret)                                                     \
