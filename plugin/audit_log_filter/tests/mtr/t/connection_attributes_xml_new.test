
let $filter = {
  "filter": {
    "class": {
      "name": "connection",
      "event": {
        "name": "connect"
      }
    }
  }
};

eval SELECT audit_log_filter_set_filter('log_connect', '$filter');
SELECT audit_log_filter_set_user('%', 'log_connect');

