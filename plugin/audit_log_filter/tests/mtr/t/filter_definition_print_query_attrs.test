query_attributes attr1 val1 attr2 val2 skipped_attr skipped_val;
SELECT * FROM t1;
query_attributes attr1 val1 attr2 val2 skipped_attr skipped_val;
UPDATE t1 SET id = 2 WHERE id = 1;
query_attributes attr1 val1 attr2 val2 skipped_attr skipped_val;
DELETE FROM t1;

SELECT audit_log_rotate();

